---
interface Props {
  number: string;
  title: string;
  text: string[];
}
const { number, title, text } = Astro.props;
---

<div class="bg-white mt-5 rounded-2xl w-full pt-20 pb-16 px-7 text-slate-950 relative">
  <div
    class="absolute top-[-20px] rounded-xl flex items-center justify-center border-solid border-2 border-sky-500 w-[56px] h-[70px] bg-white text-sky-500 font-bold text-2xl"
  >
    {number}
  </div>
  <h3 class="font-extrabold text-xl sm:text-2xl mb-4 sm:mb-8">{title}</h3>
  {
    text.length > 0 &&
      text.map((textItem) => <p class="mb-4 text-sm sm:text-base text-slate-700">{textItem}</p>)
  }
</div>
