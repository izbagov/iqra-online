---
import { getCollection } from 'astro:content';
const allLessons = await getCollection('lessons');
---

<div class="container mx-auto mt-14 sm:mt-28">
  <h2 class="text-4xl font-bold mb-14 text-center">Список уроков</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 sm:gap-10 px-5 sm:px-0">
    {
      allLessons.map(({ data }) => (
        <div class="bg-white dark:bg-neutral-600 rounded-2xl">
          <img src={`${data.thumbnail}`} class="rounded-t-lg" />
          <div class="py-5 px-6">
            <h3 class="font-bold text-x mb-1">{data.title}</h3>
            <p class="text-gray-500 dark:text-neutral-400">{data.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>
